{
  "extends": "@hackney/eslint-config",
  "parserOptions": {
    "project": "./tsconfig.json",
    "extraFileExtensions": [".mjs"]
  },
  "rules": {
    "prefer-arrow-callback": "off",
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": ["Link"],
        "aspects": ["invalidHref"]
      }
    ],
    "jsx-a11y/label-has-associated-control": "off"
  }
}
