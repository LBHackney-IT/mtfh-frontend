{
  "name": "mtfh-frontend",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/lbh-frontend",
      "**/govuk-frontend"
    ]
  },
  "scripts": {
    "pkg": "manypkg run",
    "check:pkgs": "manypkg check",
    "fix:pkgs": "manypkg fix",
    "version:pkgs": "changeset version",
    "release": "changeset publish",
    "test": "lerna run test --stream --concurrency=1",
    "test:ci": "lerna run test:ci --stream --concurrency=1",
    "lint": "lerna run lint --no-private --stream",
    "storybook": "start-storybook -p 6006 --ci",
    "build-storybook": "build-storybook",
    "prestart": "yarn && yarn bootstrap",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "postinstall": "husky install",
    "build": "lerna run build --no-private --stream"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LBHackney-IT/mtfh-frontend.git"
  },
  "dependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@babel/runtime": "^7.14.6",
    "@changesets/changelog-github": "^0.4.0",
    "@changesets/cli": "^2.16.0",
    "@manypkg/cli": "^0.18.0",
    "@types/react": "^17.0.13",
    "@types/react-dom": "^17.0.9",
    "babel-jest": "^27.0.6",
    "identity-obj-proxy": "^3.0.0",
    "lerna": "^4.0.0",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5",
    "webpack": "^5.51.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@storybook/addon-actions": "^6.4.0-alpha.30",
    "@storybook/addon-essentials": "^6.4.0-alpha.30",
    "@storybook/addon-links": "^6.4.0-alpha.30",
    "@storybook/builder-webpack5": "^6.4.0-alpha.30",
    "@storybook/manager-webpack5": "^6.4.0-alpha.30",
    "@storybook/react": "^6.4.0-alpha.30",
    "@storybook/react-docgen-typescript-plugin": "1.0.2-canary.187a82f.0",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "5.3.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-react": "1.1.7",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-testing-library": "4.9.0",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.2.1",
    "css-loader": "^5.2.7",
    "husky": "^7.0.1",
    "jest": "^27.3.1",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.2.1"
  }
}
