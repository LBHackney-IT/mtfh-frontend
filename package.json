{
  "name": "lbh-mtfh-frontend",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/lbh-frontend",
      "**/govuk-frontend"
    ]
  },
  "scripts": {
    "pkg": "manypkg run",
    "check:pkgs": "manypkg check",
    "fix:pkgs": "manypkg fix",
    "version:pkgs": "changeset version",
    "release": "changeset publish",
    "test": "jest --maxWorkers=50%",
    "test:ci": "jest --runInBand",
    "lint": "lerna run lint --no-private --stream",
    "storybook": "start-storybook -p 6006 --ci",
    "build-storybook": "build-storybook",
    "prestart": "yarn && yarn bootstrap",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "postinstall": "husky install",
    "build": "lerna run build --ignore @lbh-mtfh/test-utils --no-private --stream"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LBHackney-IT/mtfh-frontend.git"
  },
  "dependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@babel/runtime": "^7.14.6",
    "@changesets/changelog-github": "^0.4.0",
    "@changesets/cli": "^2.16.0",
    "@manypkg/cli": "^0.18.0",
    "@types/react": "^17.0.13",
    "@types/react-dom": "^17.0.9",
    "babel-jest": "^27.0.6",
    "identity-obj-proxy": "^3.0.0",
    "lerna": "^4.0.0",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@storybook/addon-actions": "^6.3.4",
    "@storybook/addon-essentials": "^6.3.4",
    "@storybook/addon-links": "^6.3.4",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.3.4",
    "babel-loader": "^8.2.2",
    "css-loader": "^4.3.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "sass-loader": "^10.2.0",
    "style-loader": "^1.3.0"
  }
}
